{
  "compilerOptions": {
    "outDir": "dist/esm",
    "target": "es2015",
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017",
      "es2018"
    ],
    "module": "none",
    "moduleResolution": "node",
    "declaration": true,
    "pretty": true,
    "newLine": "lf",
    "stripInternal": true,
    "strict": true,
    "sourceMap": false
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
